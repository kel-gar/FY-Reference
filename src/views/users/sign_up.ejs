<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>

    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <% include ../static/partials/messages.ejs %>

      <h2>New User Sign Up</h2>
       <div class="row">
         <div class="col-md-8">
           <form method="POST" action="/users">
             <div class="form-group">
               <label>Username:</label>
               <input type="text" name="username" placeholder="Enter Username" class="form-control"/>
               <small class="text-muted" id="nameHelp">Username must be unique</small>
             </div>
             <div class="form-group">
               <label>Email:</label>
               <input type="email" name="email" placeholder="Enter Email" class="form-control"/>
               <small class="text-muted" id="nameHelp">Email must be valid and unique</small>
             </div>
             <div class="form-group">
               <label>Password:</label>
               <input type="password" name="password" placeholder="Enter Password" class="form-control"/>
               <small class="text-muted" id="nameHelp">Password but be at least 6 characters</small>
             </div>
             <div class="form-group">
               <label>Password Confirm:</label>
               <input type="password" name="password_confirmation" placeholder="Enter Password confirmation" class="form-control"/>
               <small class="text-muted" id="nameHelp">Password must match password entered above</small>
             </div><br/>
             <input type="submit" value="Sign Up" class="btn btn-primary"/>
           </form>
         </div>
       </div>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
